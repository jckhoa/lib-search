{
	"name": "lib-search",
	"description": "Lib search - A Webview API Sample",
	"version": "0.0.2",
	"publisher": "KhoaNguyen",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:libSearch.start",
		"onWebviewPanel:libSearch"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jckhoa/lib-search"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "libSearch.start",
				"title": "Start lib search session",
				"category": "Lib search"
			}
		],
		"configuration":[
			{
				"properties": {
					"conf.resource.executable": {
						"type": "string",
						"default": "",
						"description": "Path to executable (dumpbin.exe on Windows, nm on Unix)",
						"scope": "resource"
					},
					"conf.resource.cmdOptions": {
						"type": "string",
						"default": "",
						"description": "Command options",
						"scope": "resource"
					},
					"conf.resource.searchDirectory": {
						"type": "string",
						"default": "",
						"description": "Search directory",
						"scope": "resource"
					},
					"conf.resource.searchText": {
						"type": "string",
						"default": "",
						"description": "Search text",
						"scope": "resource"
					},
					"conf.resource.includeFiles": {
						"type": "string",
						"default": "",
						"description": "Files to include",
						"scope": "resource"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^4.0.2",
		"@types/vscode": "^1.47.0",
		"@types/node": "^12.12.0"
	}
}
